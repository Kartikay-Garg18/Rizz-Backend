{
  "version": 2,
  "builds": [
    { 
      "src": "src/index.js", 
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["public/**"],
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "api/options.js",
      "use": "@vercel/node"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, PATCH, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization, X-Requested-With, Accept, Origin" }
      ]
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "methods": ["OPTIONS"],
      "dest": "api/options.js"
    },
    { 
      "src": "/socket.io/(.*)",
      "dest": "src/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "src/index.js"
    }
  ],
  "regions": ["cdg1"], 
  "env": {
    "NODE_ENV": "production",
    "VERCEL": "true"
  }
}