{
  "version": 2,
  "builds": [
    { 
      "src": "src/index.js", 
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["public/**"],
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    { 
      "src": "/socket.io/(.*)",
      "dest": "src/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "src/index.js"
    }
  ],
  "regions": ["cdg1"], 
  "env": {
    "NODE_ENV": "production",
    "VERCEL": "true"
  }
}